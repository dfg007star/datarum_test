<div class="row">
  <div class="col">
    <%= form_for Answer.new, remote: true do |f| %>
      <div class="form-group">
        <p>Your answer:</p>
        <%= f.text_area :body, class:"form-control form-control-answer" %>
      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :question_id, value: @question.id %>
      <%= f.submit "Give Answer",  class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</div>