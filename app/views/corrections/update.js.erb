$('#collapseAcceptCor<%= @correction.id %>').collapse('hide');
$("#answer<%= @question.id %>").html('<%= j render "answers/answers", :locals => @question %>');

$('.accepted a').on('click', function (e) {
    let id = $(this).data('correction')
    e.preventDefault();
    $(`#acceptCorrection${id}`).fadeIn().toggleClass('accept-correction-selected');
})