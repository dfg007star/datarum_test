<div class="collapse" id="questionNewBtn">
  <div class="row">
    <div class="col">
      <%= form_for Question.new, class: "new-question", remote: true do |f| %>
        <div class="form-group">
          <p>Title:</p>
          <%= f.text_field :title, autofocus: true, class: "form-control new-question-title" %>
        </div>
        <div class="form-group">
          <p>Detailed description of the situation:</p>
          <%= f.text_area :body, class: "form-control lol new-question-text-area" %>
        </div>
        <%= f.submit "Ask a Question",  class: "btn btn-sm btn-secondary btn-new-question", style: "display: none" %>
      <% end %>
    </div>
  </div>
</div>
