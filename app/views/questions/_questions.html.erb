<ul class="list-group mb-3">
  <% @questions.each do |question| %>
    <% @question = question %>
    <li class="list-group-item mt-3 bg-white">
      <div class="row align-items-baseline justify-content-between px-3">
        <span class="badge badge-secondary"><%= User.find(question.user_id).username %></span>
        <small><%= time_ago_in_words(question.created_at) %> ago</small>
      </div>
      <div class="border-left">
        <p class="font-weight-bold mt-3 ml-2">
          <%= question.title %>
        </p>
        <p class="ml-2"><%= question.body %></p>

<!--        Answers-->
        <div class="ml-3 bg-light-answers rounded">
          <div id="answer<%= question.id%>" class="mb-3">
            <%= render 'answers/answers' %>
          </div>
          <button class="btn btn-sm btn-info collapsed" type="button" data-toggle="collapse" data-target="#collapseExample<%= question.id%>" aria-expanded="false" aria-controls="collapseExample">
           Answer<i class="arrow"></i>
          </button>

          <div class="collapse mt-3" id="collapseExample<%= question.id%>">
            <%= render 'answers/form' %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
